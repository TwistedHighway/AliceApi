<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <div id="site-wrapper">
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title"><a href="~/">Alice ~ Api</a></p>
            </div>
            <div class="float-right">
                 <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Logging", "Index", "Logging", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Products", "Index", "Products", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("MvcMembership", "Index", "UserAdministration", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Movies", "Index", "Movie", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
        
            <div class="content-wrapper clear-fix">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>

        @* NEEDED FOR STICKY FOOTER*@
        <div class="push"></div>
    </div>
    @*NEEDS TO BE OUTSIDE site-wrapper*@
    <footer>
        <div class="float-left">&copy;2014</div>      
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
