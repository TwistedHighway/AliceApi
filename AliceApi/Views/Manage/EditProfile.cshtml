@model AliceApi.ViewModels.Membership.MemberViewModel.MemberProfile
@{
    ViewBag.SectionTitle = "Account Manager";
    ViewBag.Title = "Profile Editor";
}

<h2>@ViewBag.SectionTitle</h2>
<h4>@ViewBag.Title</h4>
<hr />
@using (Html.BeginForm("EditProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MemberProfileId)
    
    <h3>@Html.Raw(Model.LocalUserName)</h3>

    <h4>Profile Data | <small>last update: @Html.Raw(Model.DateUpdated)</small> |</h4>
    <div class="form-group">
        @Html.LabelFor(m => m.PublicUserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PublicUserName, new {@class = "form-control"})
        </div>
   </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PrimaryEmail, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrimaryEmail, new {@class = "form-control"})
        </div>
    </div>

    <h4>Primary User Data</h4>
    @Html.HiddenFor(m => m.PrimaryMember.MemberId)
    <div class="form-group">
        @Html.LabelFor(m => m.PrimaryMember.FirstName, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrimaryMember.FirstName, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PrimaryMember.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrimaryMember.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-actions">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save"/>

            @Html.ActionLink("cancel", "index", "Manage", null)

        </div>
    </div>


    <br/><br /><br /><br />


}